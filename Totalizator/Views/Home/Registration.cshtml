@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Services")
@Scripts.Render("~/ViewModels")
@Scripts.Render("~/ViewModels")
@Styles.Render("~/Content/totalizatorStyles.css")

<h2>Regisrtation</h2>
<form class="main-element" data-bind="submit: RegisterClick">
    <div class="item-element">
        <label> UserName </label>
        <input type="text" id="username" data-bind="value: UserName" required>
    </div>
    <div class="item-element">
        <label> Email </label>
        <input type="email" id="email" data-bind="value: Email" required>
    </div>
    <div class="item-element">
        <label> Password </label>
        <input type="password" id="pass" data-bind="value: UserPassword" required>
    </div>
    <div class="button-container">
        <button type="submit">Register</button>
    </div>
</form>

@section scripts{
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.0.js"></script>
    <script>
        function getCookiePartByKey(key) {
            var value = "; " + document.cookie;
            var parts = value.split("; " + key + "=");
            if (parts.length == 2) return parts.pop().split(";").shift();
        }
        var registrationService = new RegistrationService();
        var registrationViewModel = new RegisrationViewModel(registrationService);
        registrationViewModel.init();
        ko.applyBindings(registrationViewModel);
    </script>
}
